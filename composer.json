{
	"name": "abouvier/datname",
	"description": "ROM renaming tool",
	"keywords": [
		"clrmamepro",
		"datafile",
		"emulator",
		"game",
		"hash",
		"logiqx",
		"mame",
		"no-intro",
		"redump",
		"rename",
		"rom",
		"tosec",
		"xml"
	],
	"license": "Apache-2.0",
	"authors": [{
		"name": "Alexandre Bouvier",
		"email": "contact@amb.tf"
	}],
	"require": {
		"php": ">=8.1",
		"ext-hash": "*",
		"ext-spl": "*",
		"abouvier/clrmamepro-parser": "^0.1",
		"lunkkun/caching-generator": "^3.1",
		"ramsey/collection": "^1.2"
	},
	"suggest": {
		"ext-dom": "Needed to support Logiqx datfiles",
		"ext-libxml": "Needed to support Logiqx datfiles",
		"ext-simplexml": "Needed to support Logiqx datfiles",
