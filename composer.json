{
	"name": "abouvier/datname",
	"description": "ROM renaming tool",
	"keywords": [
		"clrmamepro",
		"datafile",
		"emulator",
		"game",
		"hash",
		"logiqx",
		"mame",
		"no-intro",
		"redump",
		"rename",
		"rom",
		"tosec",
		"xml"
	],
	"license": "Apache-2.0",
	"authors": [
		{
			"name": "Alexandre Bouvier",
			"email": "contact@amb.tf"
		}
	],
	"require": {
		"php": ">=8.1",
		"ext-hash": "*",
		"ext-spl": "*",
		"ramsey/collection": "^2.0"
	},
	"require-dev": {
		"ext-dom": "*",
		"ext-libxml": "*",
		"ext-simplexml": "*",
		"ext-zip": "*",
		"abouvier/clrmamepro-parser": "@dev",
		"friendsofphp/php-cs-fixer": "@stable",
		"jetbrains/phpstorm-stubs": "@dev",
		"vimeo/psalm": "@stable"
	},
	"suggest": {
		"ext-dom": "Needed to support XML datfiles",
		"ext-libxml": "Needed to support XML datfiles",
		"ext-simplexml": "Needed to support XML datfiles",
		"ext-zip": "Needed to support ZIP sets",
		"abouvier/clrmamepro-parser": "Needed to support ClrMamePro datfiles"
	},
	"autoload": {
		"psr-4": {
			"DatName\\": "src"
		}
	},
	"bin": [
		"bin/datname"
	]
}
